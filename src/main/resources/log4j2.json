{
  "configuration": {
    "name": "Default",
    "status": "WARN",
    "appenders": {
      "Console": {
        "name": "console",
        "target": "SYSTEM_OUT",
        "PatternLayout": {
          "pattern": "[%d{MM-dd-yyyy HH:mm:ss.SSS}][%t] %-5level %logger{36} - %msg%n"
        },
        "filters": [
          {
            "ThresholdFilter": {
              "level": "debug",
              "onMatch": "ACCEPT",
              "onMismatch": "DENY"
            }
          }
        ]
      },
      "RollingFile":[
        {
          "name": "rollingFile",
          "fileName": "logs/reqman.log",
          "filePattern": "logs/$${date:yyyy-MM}/reqman-%d{MM-dd-yyyy}-%i.log.gz",
          "PatternLayout": {
            "pattern": "[%d{MM-dd-yyyy HH:mm:ss.SSS}][%t] %-5level %logger{36}: %msg%n"
          },
          "Policies": {
            "SizeBasedTriggeringPolicy": {
              "size": "10 MB"
            }
          },
          "DefaultRolloverStrategy": {
            "max": "5"
          }
        },{
          "name": "traceFile",
          "fileName": "logs/reqman-trace.log",
          "filePattern": "logs/$${date:yyyy-MM}/reqman-trace-%d{MM-dd-yyyy}-%i.log.gz",
          "PatternLayout": {
            "pattern": "[%d{MM-dd-yyyy HH:mm:ss.SSS}][%t] %-5level %logger{36}: %msg%n"
          },
          "Policies": {
            "OnStartupTriggeringPolicy": {
              "minSize":1
            }
          },
          "DefaultRolloverStrategy": {
            "max": "10"
          }
        }
      ]
    },
    "loggers": {
      "root": {
        "level": "error",
        "AppenderRef": [
          {
            "ref": "console"
          },
          {
            "ref": "rollingFile"
          },
          {
            "ref":"traceFile",
            "level":"trace"
          }
        ]
      },
      "logger": [
        {
          "name": "ch.unibas.dmi.dbis.reqman.templating",
          "level": "trace",
          "additivity": false,
          "AppenderRef": [
            {
              "ref": "console"
            },
            {
              "ref": "rollingFile",
              "level": "info"
            },
